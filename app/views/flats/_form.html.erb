<div class="form">
  <div class="form-content">
    <%= simple_form_for(@flat) do |f| %>
    <%= f.input :picture_url, class: "form-control" %>
    <%= f.input :name %>
    <%= f.input :address, input_html: { autocomplete: "off", "aria-autocomplete" => "none", "data-password" => "false"} %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit "Create", class:'btn btn-primary' %>
    <%= link_to "Cancel", flats_path, class:'btn btn-danger' %>

    <% end %>
  </div>
</div>
